@model Match
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePOST">
    @* Pass ID in a hidden field *@
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Delete Match</h1>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-controller="Match" asp-action="Index" class="btn btn-secondary" style="width:150px;">Back to Match List</a>
    </div>
</form>

@section Scripts {
    @{
        // this makes validation happen on client side, rather than server side
        <partial name="_ValidationScriptsPartial" />
    }
}