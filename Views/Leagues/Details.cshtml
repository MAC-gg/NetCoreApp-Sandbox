@model NetCoreApp.ViewModels.DetailsLeagueVM

@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-6">
        <h1>Details</h1>
    </div>
</div>

<div>
    <h4>League</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.league.CreatedDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.league.CreatedDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.league.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.league.Name)
        </dd>
    </dl>
</div>

<div class="d-flex flex-row flex-wrap justify-content-between">
    <h2>Teams (@Model.teams.Count() / @Model.league.numTeamsToStart)</h2>
    @if (@Model.teams.Count() != @Model.league.numTeamsToStart)
    {
        <a asp-controller="Teams" asp-action="Create" asp-route-id="@Model.league.Id" class="btn btn-primary">Add Team</a>
    }
</div>

<div class="teams-container d-flex flex-row flex-wrap">
@foreach(var team in @Model.teams)
{
    <div class="single-team-container background-off-white rounded m-2">
        <a asp-controller="Teams" asp-action="Details" asp-route-id="@team.Id">@team.Name</a>
    </div>
}
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.league.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
